%tr
  %td
    %span{:class => "label label-#{order_status_label(order.status)}"}
      = order.status.titleize
  %td
    = order.created_at.strftime("%a %d %b. %Y")
  %td
    == #{order.creator.name} (#{order.creator.email})
  %td
    = render :partial => "order_actions", :locals => {:order => order}
